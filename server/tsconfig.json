{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    //"moduleResolution": "Bundler",  // Add this
    "noEmit": true,  // Add this if you're using ts-node or another transpiler
    "allowImportingTsExtensions": true  // Add this
  },
  "exclude": ["node_modules"]
}


